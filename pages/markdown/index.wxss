.custom-slider {
  margin-top: 8rpx;
}

/* 选择器样式 */
.picker-button {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  margin-top: 16rpx;
  border-radius: 12rpx;
  background-color: rgba(242, 242, 247, 0.8);
  transition: all 0.2s ease-out;
  backdrop-filter: blur(10px);
}

.picker-button:active {
