/* 全局重置和基础样式 */
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', sans-serif;
  color: #1c1c1e;
}

.app-container {
  position: relative;
  min-height: 100vh;
  width: 100%;
}

/* 背景图片 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -2;
  object-fit: cover;
}

/* 背景遮罩 - 减少透明度让背景更清晰 */
.background-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(
    180deg, 
    rgba(248, 249, 250, 0.2) 0%, /* 减少遮罩强度 */
    rgba(248, 249, 250, 0.3) 50%,
    rgba(248, 249, 250, 0.4) 100%
  );
  z-index: -1;
  pointer-events: none;
}

/* 内容包装器 */
.content-wrapper {
  position: relative;
  z-index: 1;
  min-height: 100vh;
}

/* 全屏输入模式 - 重新设计 */
.fullscreen-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(20px);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  
  /* 确保容器尺寸正确 */
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  
  /* 初始状态：从底部滑入 */
  opacity: 0;
  transform: translateY(100%);
  visibility: hidden;
  
  /* 平滑过渡动画 */
  transition: 
    opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94),
    transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94),
    visibility 0s linear 0.6s;
}

.fullscreen-modal.active {
  opacity: 1;
  transform: translateY(0);
  visibility: visible;
  transition: 
    opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94),
    transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94),
    visibility 0s linear 0s;
}

/* 全屏头部 - 重新设计为标题和字数计数器 */
.fullscreen-header {
  display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1px solid rgba(229, 229, 234, 0.8);
  background-color: rgba(255, 255, 255, 0.9);
  width: 100%;
  box-sizing: border-box;
  backdrop-filter: blur(10px);
  flex-shrink: 0; /* 防止被压缩 */
  
  /* 头部延迟动画 */
  opacity: 0;
  transform: translateY(-30rpx);
  transition: 
    opacity 0.5s ease-out,
    transform 0.5s ease-out;
  transition-delay: 0.2s;
}

.fullscreen-modal.active .fullscreen-header {
  opacity: 1;
  transform: translateY(0);
}

.fullscreen-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1c1c1e;
  flex: 1;
}

/* 全屏字数计数器 - 放在右上角 */
.fullscreen-char-counter {
  font-size: 26rpx;
  color: #8e8e93;
  font-weight: 400;
  flex-shrink: 0;
  text-align: right;
}

/* 全屏滚动包装器 - 调整高度以适应底部按钮栏 */
.fullscreen-scroll-wrapper {
  flex: 1;
  width: 100%;
  height: calc(100% - 120rpx); /* 减去底部按钮栏的高度 */
  
  /* 延迟动画 */
  opacity: 0;
  transform: translateY(30rpx);
  transition: 
    opacity 0.5s ease-out,
    transform 0.5s ease-out;
  transition-delay: 0.4s;
  
  /* 确保滚动容器正确 */
  overflow: hidden;
  position: relative;
  
  /* iOS风格的滚动 */
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

.fullscreen-modal.active .fullscreen-scroll-wrapper {
  opacity: 1;
  transform: translateY(0);
}

/* 滚动时的额外效果 */
.fullscreen-scroll-wrapper.scrolling {
  /* 可以添加一些视觉反馈 */
  transition: transform 0.1s ease-out;
}

/* 全屏内容包装器 - 调整底部间距 */
.fullscreen-content-wrapper {
  min-height: calc(100vh - 280rpx); /* 调整高度以适应新布局 */
  width: 100%;
  position: relative;
  padding-bottom: 60rpx; /* 减少底部空间 */
}

/* 全屏文本区域 - 调整高度 */
.fullscreen-textarea {
  width: 100%;
  min-height: calc(100vh - 280rpx); /* 调整高度 */
  padding: 32rpx;
  font-size: 32rpx;
  line-height: 1.6;
  background-color: transparent;
  border: none;
  box-sizing: border-box;
  resize: none;
  outline: none;
  color: #1c1c1e;
  
  /* 关键：让textarea自适应高度，不产生自己的滚动条 */
  overflow: visible;
  height: auto;
  max-height: none;
  
  /* 确保文本输入流畅 */
  word-wrap: break-word;
  word-break: break-all;
}

/* 底部占位空间 - 减少高度 */
.fullscreen-bottom-spacer {
  height: 100rpx;
  width: 100%;
}

/* 全屏底部按钮栏 - 新增 */
.fullscreen-bottom-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom)); /* 适配安全区域 */
  border-top: 1px solid rgba(229, 229, 234, 0.8);
  background-color: rgba(248, 249, 250, 0.95);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  width: 100%;
  box-sizing: border-box;
  flex-shrink: 0;
  
  /* 固定在底部 */
  position: relative;
  z-index: 10;
  
  /* 底部延迟动画 */
  opacity: 0;
  transform: translateY(20rpx);
  transition: 
    opacity 0.5s ease-out,
    transform 0.5s ease-out;
  transition-delay: 0.3s;
}

.fullscreen-modal.active .fullscreen-bottom-bar {
  opacity: 1;
  transform: translateY(0);
}

/* 全屏清空按钮 - 添加宽度控制 */
.btn-fullscreen-clear {
  background-color: rgba(255, 59, 48, 0.1) !important;
  color: #ff3b30 !important;
  border: none !important;
  border-radius: 20rpx !important;
  padding: 16rpx 32rpx !important;
  font-size: 30rpx !important;
  font-weight: 500 !important;
  transition: all 0.2s ease-out !important;
  margin: 0 !important;
  min-width: auto !important;
  flex-shrink: 0 !important;
  white-space: nowrap !important;
  text-align: center !important;
  letter-spacing: 2rpx !important;
  
  /* 添加宽度控制 */
  width: 330rpx !important;
}

.btn-fullscreen-clear::after {
  border: none !important;
  background: none !important;
}

.btn-fullscreen-clear:active {
  background-color: rgba(255, 59, 48, 0.2) !important;
  color: #ff6b6b !important;
  transform: scale(0.96) !important;
}

/* 全屏完成按钮 - 添加宽度控制 */
.btn-fullscreen-done {
  background-color: #34c759 !important;
  color: #ffffff !important;
  border: none !important;
  border-radius: 20rpx !important;
  padding: 16rpx 32rpx !important;
  font-size: 30rpx !important;
  font-weight: 600 !important;
  transition: all 0.2s ease-out !important;
  margin: 0 !important;
  min-width: auto !important;
  flex-shrink: 0 !important;
  white-space: nowrap !important;
  text-align: center !important;
  letter-spacing: 2rpx !important;
  box-shadow: 0 4rpx 12rpx rgba(52, 199, 89, 0.3);
  
  /* 添加宽度控制 */
  width: 330rpx !important;
}

.btn-fullscreen-done::after {
  border: none !important;
  background: none !important;
}

.btn-fullscreen-done:active {
  background-color: #30d158 !important;
  transform: scale(0.96) !important;
  box-shadow: 0 2rpx 8rpx rgba(52, 199, 89, 0.4);
}

/* 主界面 - 平滑退出效果 */
.main-content {
  position: relative;
  height: 100vh;
  transition: 
    opacity 0.5s ease-out,
    transform 0.5s ease-out,
    filter 0.4s ease-out;
}

.main-content.hidden {
  opacity: 0.2;
  transform: scale(0.98);
  filter: blur(2px);
  pointer-events: none;
}

