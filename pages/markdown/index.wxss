  margin: 0 32rpx 32rpx;
  border-radius: 12rpx;
  min-height: 200rpx;
  transition: all 0.3s ease;
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.preview-text {
  display: block;
  line-height: 1.6;
  word-wrap: break-word;
  white-space: pre-wrap;
  color: inherit;
}

