  padding: 32rpx;
  border-bottom: 1px solid rgba(242, 242, 247, 0.6);
}

.setting-group:last-child {
  border-bottom: none;
}

.setting-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.setting-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #1c1c1e;
}

.setting-value {
  font-size: 28rpx;
  color: #34c759;
  font-weight: 600;
}

