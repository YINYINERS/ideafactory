/* 页面基础样式 */
page {
  height: 100%;
  background-color: #f0f2f5;
}

.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  pointer-events: auto;
}

/* 背景图片 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
  filter: blur(0.5rpx);
}

/* 毛玻璃遮罩层 */
.glass-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(0rpx);
  -webkit-backdrop-filter: blur(0rpx);
}

/* 状态栏样式 - 固定在顶部 */
.status-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: calc(100rpx + env(safe-area-inset-top));
  padding-top: env(safe-area-inset-top);
  background: rgba(255, 255, 255, 0);
  backdrop-filter: blur(25rpx) saturate(1.5);
  -webkit-backdrop-filter: blur(25rpx) saturate(1.5);
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 24rpx;
  padding-right: 24rpx;
  z-index: 1000;
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0);
  pointer-events: auto;
  
  /* 边框和圆角 */
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

/* 状态栏占位符 - 避免内容被遮挡 */
.status-placeholder {
  height: calc(100rpx + env(safe-area-inset-top));
  width: 100%;
}

/* AI状态指示器 - 居中显示 */
.status-indicator {
  display: flex;
  align-items: center;
  gap: 12rpx;
  position: relative;
  z-index: 2;
}

/* 简化的状态点 - 基础呼吸灯效果 */
.status-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

/* 在线状态 - 绿色呼吸灯 */
.status-dot.online {
  background-color: #03e27a;
  box-shadow: 0 0 8rpx rgba(3, 226, 122, 0.6);
  animation: breathe-simple-green 3s infinite ease-in-out;
}

/* 离线状态 - 红色呼吸灯 */
.status-dot.offline {
  background-color: #ff4444;
  box-shadow: 0 0 8rpx rgba(255, 68, 68, 0.6);
  animation: breathe-simple-red 3s infinite ease-in-out;
}

/* 简单的绿色呼吸动画 */
@keyframes breathe-simple-green {
  0%, 100% {
    opacity: 0.6;
    box-shadow: 0 0 8rpx rgba(3, 226, 122, 0.4);
  }
  50% {
    opacity: 1;
    box-shadow: 0 0 16rpx rgba(3, 226, 122, 0.8);
  }
}

/* 简单的红色呼吸动画 */
@keyframes breathe-simple-red {
  0%, 100% {
    opacity: 0.6;
    box-shadow: 0 0 8rpx rgba(255, 68, 68, 0.4);
  }
  50% {
    opacity: 1;
    box-shadow: 0 0 16rpx rgba(255, 68, 68, 0.8);
  }
}

.status-text {
  font-size: 38rpx;
  font-weight: 1000;
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0);
}

/* 新建对话按钮 - 绝对定位到右侧 */
.new-chat-btn {
  position: absolute;
  right: 44rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0);
  backdrop-filter: blur(0rpx);
  -webkit-backdrop-filter: blur(0rpx);
  border: 1rpx solid rgba(255, 255, 255, 0);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0);
  z-index: 3;
}

.new-chat-btn:active {
  transform: translateY(-50%) scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.new-chat-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 聊天容器 - 添加键盘适配 */
.chat-container {
  flex: 1;
  background: transparent;
  overflow-y: auto;
  transition: height 0.3s ease;
  pointer-events: auto;
}

/* 欢迎区域 - 调整高度计算 */
.welcome-area {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: calc(100vh - 100rpx - env(safe-area-inset-top) - 140rpx);
  text-align: center;
  padding: 0;
  margin: 0;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: 1000;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0);
  background: rgba(255, 255, 255, 0);
  backdrop-filter: blur(0rpx);
  -webkit-backdrop-filter: blur(0rpx);
  border: 2rpx solid rgba(255, 255, 255, 0);
  border-radius: 32rpx;
  padding: 40rpx 60rpx;
}

/* 消息列表 - 优化键盘适配 */
.messages-list {
  padding: 16rpx 16rpx 20rpx 16rpx;
  min-height: auto;
}

/* 🎯 修改消息行布局 - 改为居中对齐 */
.message-row {
  display: flex;
  margin-bottom: 32rpx;
  align-items: center; /* 从 flex-start 改为 center，让内容垂直居中 */
}

.ai-row {
  justify-content: flex-start;
}

.user-row {
  justify-content: flex-end;
}

/* 🎯 修改AI头像图片 - 调整对齐方式 */
.ai-avatar-image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  flex-shrink: 0;
  margin-right: 8rpx;
  margin-top: 0rpx; /* 保持为0，因为现在父容器是居中对齐 */
  background: rgba(255, 255, 255, 0);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0);
  padding: 8rpx;
  align-self: flex-start; /* 头像仍然顶部对齐，这样看起来更自然 */
}

/* AI消息容器 */
.ai-message-container {
  display: flex;
  flex-direction: column;
  max-width: 580rpx;
}

/* 🎯 修改消息气泡基础样式 - 优化内边距和对齐 */
.message-bubble {
  border-radius: 32rpx;
  padding: 20rpx 28rpx; /* 稍微减少内边距，让文字更居中 */
  position: relative;
  word-wrap: break-word;
  backdrop-filter: blur(100rpx);
  -webkit-backdrop-filter: blur(100rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 让气泡内容垂直居中 */
  min-height: 48rpx; /* 设置最小高度，确保小文本也能居中 */
}

/* AI气泡样式 */
.ai-bubble {
  background: rgba(255, 255, 255, 0.25);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

/* 用户气泡样式 */
.user-bubble {
  background: rgba(127, 47, 255, 1);
  border: 2rpx solid rgba(127, 47, 255, 0.9);
  max-width: 520rpx;
  margin-right: 30rpx;
}

/* 错误消息气泡样式 */
.error-bubble {
  background: rgba(255, 68, 68, 0.15) !important;
  border: 2rpx solid rgba(255, 68, 68, 0.3) !important;
}

.error-bubble .bubble-text {
  color: #ff4444 !important;
}

/* 🎯 修改气泡文字样式 - 优化行高和对齐 */
.bubble-text {
  font-size: 30rpx;
  line-height: 1.6; /* 从1.5调整到1.6，增加行间距让文字更居中 */
  color: #333333;
  white-space: pre-wrap;
  margin: 0; /* 确保没有额外的外边距 */
  padding: 0; /* 确保没有额外的内边距 */
  display: flex;
  align-items: center; /* 让文字在其容器内垂直居中 */
  min-height: inherit; /* 继承父容器的最小高度 */
}

/* 用户气泡文字样式 */
.user-bubble .bubble-text {
  color: #ffffff;
}

/* 🎯 修改消息时间样式 - 调整间距 */
.message-time {
  font-size: 22rpx;
  color: #666666;
  margin-top: 8rpx; /* 从12rpx减少到8rpx */
  display: block;
  line-height: 1.2; /* 添加行高控制 */
}

/* 用户消息时间样式 */
.user-bubble .message-time {
  color: rgba(255, 255, 255, 0.8);
  text-align: right;
}

/* AI消息操作按钮 - 优化防遮挡 */
.ai-message-actions {
  display: flex;
  justify-content: flex-end;
  gap: 8rpx;
  margin-top: 4rpx;
  padding-right: 16rpx;
  margin-bottom: 24rpx;
}

.ai-action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background: rgba(255, 255, 255, 0);
  backdrop-filter: blur(0rpx);
  -webkit-backdrop-filter: blur(0rpx);
  border: 2rpx solid rgba(255, 255, 255, 0);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.ai-action-btn::after {
  border: none;
}

.ai-action-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.95);
}

.action-icon-img {
  width: 32rpx;
  height: 32rpx;
}

/* 🎯 修改正在输入样式 - 优化对齐 */
.typing-bubble {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(25rpx);
  -webkit-backdrop-filter: blur(25rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 32rpx;
  padding: 20rpx 28rpx; /* 与消息气泡保持一致的内边距 */
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  min-height: 48rpx; /* 与消息气泡保持一致的最小高度 */
  margin-bottom: 40rpx; /* 🎯 增加底部边距，避免与输入框重叠 */
}

.typing-animation {
  display: flex;
  gap: 8rpx;
  align-items: center; /* 让动画点垂直居中 */
}

.typing-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #a119e0;
  animation: typing 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  30% {
    transform: scale(1);
    opacity: 1;
  }
}

.typing-text {
  font-size: 26rpx;
  color: #313131;
  line-height: 1.2; /* 添加行高控制 */
}

/* 底部大区域 - 完全透明 */
.input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: transparent !important;
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
  border-top: none;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: none;
  transition: bottom 0.3s ease;
  pointer-events: auto;
}

/* 🎯 输入框长条组件 - 只在这里控制模糊度 */
.input-wrapper {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  
  /* 🎯 修改这两行来控制模糊效果 */
  background: rgba(255, 255, 255, 0.1) !important;
  backdrop-filter: blur(5rpx) saturate(1.5) !important;
  -webkit-backdrop-filter: blur(5rpx) saturate(1.5) !important;
  
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  position: relative;
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 2rpx 8rpx rgba(0, 0, 0, 0.05),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

/* 输入框 - 透明背景 */
.text-input {
  flex: 1;
  min-height: 48rpx;
  max-height: 200rpx;
  font-size: 30rpx;
  line-height: 1.5;
  color: #1d1d1d;
  background-color: transparent;
  border: none;
  padding: 8rpx 12rpx;
  border-radius: 24rpx;
  -webkit-user-select: text;
  user-select: text;
  transition: all 0.3s ease;
}

.text-input::placeholder {
  color: #888888;
  letter-spacing: 2rpx;
}

.text-input:focus {
  outline: none;
  background: rgba(255, 255, 255, 0.1);
  box-shadow: 0 0 0 2rpx rgba(127, 47, 255, 0.3);
}

/* 发送按钮 */
.send-btn {
  min-width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  cursor: pointer;
  pointer-events: auto;
  position: relative;
  z-index: 10;
  border: none;
  outline: none;
  padding: 0;
}

.send-btn::after {
  display: none !important;
  border: none !important;
}

.send-btn:active {
  transform: scale(0.95);
}

.send-icon-img {
  width: 64rpx;
  height: 64rpx;
  transition: all 0.3s ease;
}

.send-btn.disabled .send-icon-img {
  filter: grayscale(1) brightness(0.6);
  opacity: 0.5;
}

.send-btn.active .send-icon-img {
  filter: brightness(1) saturate(1);
  opacity: 1;
}

.bottom-padding {
  transition: height 0.3s ease;
}

.keyboard-active .chat-container {
  padding-bottom: 20rpx;
}

.keyboard-active .messages-list {
  padding-bottom: 40rpx;
}

.keyboard-active .ai-message-actions {
  margin-bottom: 32rpx;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .message-bubble {
    max-width: 420rpx;
    padding: 18rpx 24rpx; /* 小屏幕下稍微减少内边距 */
  }
  
  .ai-message-container {
    max-width: 520rpx;
  }
  
  .user-bubble {
    max-width: 420rpx;
    margin-right: 20rpx;
  }
  
  .status-bar {
    padding-left: 20rpx;
    padding-right: 20rpx;
  }
  
  .status-text {
    font-size: 32rpx;
  }
  
  .new-chat-btn {
    right: 20rpx;
    width: 44rpx;
    height: 44rpx;
    border-radius: 22rpx;
  }
  
  .new-chat-icon {
    width: 24rpx;
    height: 24rpx;
  }
  
  .status-dot {
    width: 20rpx;
    height: 20rpx;
  }
  
  .status-placeholder {
    height: calc(100rpx + env(safe-area-inset-top));
  }
  
  .messages-list {
    padding: 16rpx 16rpx 20rpx 16rpx;
  }
  
  .ai-message-actions {
    margin-bottom: 20rpx;
  }
  
  .keyboard-active .ai-message-actions {
    margin-bottom: 28rpx;
  }
}

@media screen and (max-width: 320px) {
  .message-bubble {
    max-width: 380rpx;
    padding: 16rpx 20rpx; /* 超小屏幕下进一步减少内边距 */
  }
  
  .ai-message-container {
    max-width: 480rpx;
  }
  
  .user-bubble {
    max-width: 360rpx;
    margin-right: 16rpx;
  }
  
  .status-text {
    font-size: 28rpx;
  }
  
  .welcome-title {
    font-size: 40rpx;
    padding: 32rpx 48rpx;
  }
  
  .bubble-text {
    font-size: 28rpx;
  }
  
  .input-wrapper {
    padding: 12rpx 24rpx;
  }
  
  .text-input {
    font-size: 28rpx;
  }
}