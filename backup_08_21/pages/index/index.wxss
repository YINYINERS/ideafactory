/* 全局重置和基础样式 */
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', sans-serif;
  color: #1c1c1e;
}

.app-container {
  position: relative;
  min-height: 100vh;
  width: 100%;
}

/* 背景图片 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -2;
  object-fit: cover;
}

/* 背景遮罩 - 减少透明度让背景更清晰 */
.background-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(
    180deg, 
    rgba(248, 249, 250, 0.3) 0%, /* 减少遮罩强度 */
    rgba(248, 249, 250, 0.3) 50%,
    rgba(248, 249, 250, 0.4) 100%
  );
  z-index: -1;
  pointer-events: none;
}

/* 内容包装器 */
.content-wrapper {
  position: relative;
  z-index: 1;
  min-height: 100vh;
}

/* scroll-view容器样式 */
.scroll-container {
  width: 100%;
  height: 100vh;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

/* 头部样式 - 现在会跟着滚动 */
.header {
  text-align: center;
  padding: 80rpx 40rpx 60rpx 40rpx;
  position: relative;
}

.title-main {
  display: block;
  font-size: 64rpx;
  font-weight: 700;
  color: #391e64;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.1);
  letter-spacing: -1rpx;
}

.title-sub {
  font-size: 28rpx;
  color: #8e8e93;
  font-weight: 400;
  text-shadow: 0 1rpx 3rpx rgba(255, 255, 255, 0.1);
  opacity: 0.9;
}

/* 瀑布流容器 */
.waterfall-container {
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
  padding: 0 20rpx;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 毛玻璃卡片基础样式 - 统一透明度 */
.glass-card {
  background-color: rgba(255, 255, 255, 0.15); /* 更透明 */
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.08),
    0 0 0 1rpx rgba(255, 255, 255, 0.4);
  transition: 
    backdrop-filter 0.3s ease,
    -webkit-backdrop-filter 0.3s ease,
    background-color 0.3s ease;
  backdrop-filter: blur(20px); /* 减少初始模糊度 */
  -webkit-backdrop-filter: blur(15px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 点击时只增加模糊度，移除抖动效果 */
.glass-card:active {
  background-color: rgba(255, 255, 255, 0.25); /* 稍微增加不透明度 */
  backdrop-filter: blur(40px); /* 增加模糊度 */
  -webkit-backdrop-filter: blur(30px);
}

/* 卡片图标行 - 顶部布局 */
.card-icon-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  overflow: hidden;
  position: relative;
  /* 添加白色背景增强对比 */
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: none;
}

/* 去掉图标背景色 */
.icon-markdown,
.icon-color,
.icon-picture,
.icon-text,
.icon-code,
.icon-design,
.icon-ai,
.icon-tool {
  background: transparent; /* 去掉背景 */
  box-shadow: none; /* 去掉阴影（可选） */
}

/* 卡片状态标签 - 只显示开发中 */
.card-status {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  flex-shrink: 0;
}

.status-coming {
  background: rgba(43, 217, 248, 0);
  color: #7d5797;
  border: 1rpx solid rgba(78, 208, 241, 0);
}

/* 卡片文字区域 - 底部布局 */
.card-text-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.card-title {
  font-size: 32rpx;
  font-weight: 450;
  color: #413c3c;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0);
  margin-bottom: 8rpx;
}

.card-description {
  font-size: 23rpx;
  font-weight: 300;
  line-height: 1.5;
  color: #3c3c43;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0);
}

/* 不同高度的卡片 */
.card-small {
  min-height: 220rpx;
}

.card-medium {
  min-height: 280rpx;
}

.card-large {
  min-height: 340rpx;
}

.card-extra-large {
  min-height: 380rpx;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .waterfall-container {
    padding: 0 15rpx;
    gap: 15rpx;
  }
  
  .header {
    padding: 60rpx 30rpx 40rpx 30rpx;
  }
  
  .title-main {
    font-size: 56rpx;
  }
  
  .title-sub {
    font-size: 26rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  page {
    background-color: #000000;
    color: #ffffff;
  }
  
  .app-container {
    background: linear-gradient(180deg, #000000 0%, #1c1c1e 100%);
  }
  
  .background-overlay {
    background: linear-gradient(
      180deg, 
      rgba(0, 0, 0, 0.2) 0%,
      rgba(28, 28, 30, 0.3) 50%,
      rgba(28, 28, 30, 0.4) 100%
    );
  }
  
  .glass-card {
    background-color: rgba(28, 28, 30, 0.6);
    border: 1rpx solid rgba(99, 99, 102, 0.2);
  }
  
  .glass-card:active {
    background-color: rgba(28, 28, 30, 0.8);
    backdrop-filter: blur(40px);
    -webkit-backdrop-filter: blur(30px);
  }
  
  .title-main {
    color: #ffffff;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  }
  
  .title-sub {
    color: #8e8e93;
    text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
  }
  
  .card-title {
    color: #ffffff;
    text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  }
  
  .card-description {
    color: #e5e5ea;
    text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  }
}